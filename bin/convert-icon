#!/bin/bash
# Helper script to convert PNG icon to Windows ICO format
# Uses ImageMagick's magick command (not deprecated convert)

set -e

if ! command -v magick &> /dev/null; then
    echo "Error: ImageMagick is not installed"
    echo "Install it with: sudo apt-get install imagemagick"
    exit 1
fi

echo "Converting public/icon.png to public/icon.ico..."
magick public/icon.png -define icon:auto-resize=256,128,96,64,48,32,16 public/icon.ico

echo "Icon conversion complete!"
ls -lh public/icon.ico
